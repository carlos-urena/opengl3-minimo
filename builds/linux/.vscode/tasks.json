// https://code.visualstudio.com/docs/editor/tasks#_custom-tasks

{
  "version": "2.0.0",
  "tasks": [
    {
      "label"   : "Compilar y ejecutar",
      "type"    : "shell",
      "command" : "cd cmake && make && ../bin/main_linux_exe",
      "group"   : 
      {
        "kind"      : "build",
        "isDefault" : true
      },
      "problemMatcher" : "$gcc",
      "presentation" : 
      {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label"   : "Compilar si es necesario",
      "type"    : "shell",
      "command" : "cd cmake && make",
      "group"   : 
      {
        "kind"      : "build",
        "isDefault" : false
      },
      "problemMatcher" : "$gcc",
      "presentation" : 
      {
        "reveal" : "always",
        "panel"  : "new"
      }
    },
    {
      "label"   : "Compilar",
      "type"    : "shell",
      "command" : "cd cmake && make clean && make",
      "group"   : 
      {
        "kind"      : "build",
        "isDefault" : false
      },
      "problemMatcher" : "$gcc",
      "presentation" : 
      {
        "reveal" : "always",
        "panel"  : "new"
      }
    },
    {
      "label"   : "Ejecutar",
      "type"    : "shell",
      "command" : "bin/main_linux_exe",
      "group"   : 
      { "kind"      : "test",
        "isDefault" : true
      },
      "presentation": 
      { "reveal" : "always",
        "panel"  : "new"
      }
    },
    {
      "label"   : "Regenerar archivos de compilaci√≥n",
      "type"    : "shell",
      "command" : "cd cmake && rm -rf * && cmake ..",
      "group"   : 
      { "kind"      : "build",
        "isDefault" : false
      },
      "presentation" : 
      { "reveal": "always",
        "panel": "new"
      }
    }
  ]    
}
